{{#if addNewQuestion}}
  <h1>New Question</h1>
    <form>
      <div class="form-group">
        <label for="query">Question</label>
        {{input value=query  id="query"}}
      </div>

      <div class="form-group">
        <label for="authorfirst">First Name</label>
        {{input value=authorfirst id="authorfirst"}}
      </div>

      <div class="form-group">
        <label for="authorlast">Last Name</label>
        {{input value=authorlast id="authorlast"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'addQuestion1' question}}>Save</button>
    </form>
{{else}}
  <button {{action 'newQuestionFormShow'}}>New Question</button>
{{/if}}
