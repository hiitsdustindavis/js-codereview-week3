{{#if editQuestion}}
  <h1>Edit Question</h1>
  <form>
    <div class="form-group">
      <label for="query">Question</label>
      {{input value=query  id="query"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <div class="form-group">
      <label for="answer">Answer</label>
      {{input value=answer id="answer"}}
    </div>
    <button {{action 'update' question}}>Save</button>
  </form>
  {{else}}
  <button {{action 'editQuestion'}}>Edit Question</button>
{{/if}}
